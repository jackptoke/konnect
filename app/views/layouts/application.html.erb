<!DOCTYPE html>
<html>
  <head>
    <title>Konnect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>

  <body>
    <% authenticated_user_type = '' %>
    <% if interpreter_signed_in? %>
        <%= link_to "ilogout", destroy_interpreter_session_path, method: :delete %>
    <% elsif client_signed_in? %>
        <%= link_to "clogout", destroy_client_session_path, method: :delete %>
    <% elsif admin_signed_in? %>
        <%= link_to "alogout", destroy_admin_session_path, method: :delete %>
    <% else %>
        <%= link_to "Interpreter login", new_interpreter_session_path %>
        <%= link_to "Client login", new_client_session_path %>
        <%= link_to "login", new_admin_session_path %>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
